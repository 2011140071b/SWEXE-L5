<% @tweets.each do |tweet| %>
    <p>
    <%= tweet.message %>
    <% if session[:login_uid] %>
        <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
        <%= tweet.like_users.count %>
        <% if !tweet.like_users.find_by(uid: session[:login_uid]) %>
            <%= link_to 'いいね', likes_path(tweet_id: tweet.id), method: :post %>
        <% else %>
            <%= link_to 'いいね削除', like_path(tweet), method: :delete %>
        <% end %>
    <% end %>
    </p>
<% end %><br>


<% if session[:login_uid] %>
    <p><%= link_to 'ツイートする', '/tweets/new' %></p>
    <p><%= link_to 'ログアウト', '/tops/logout' %></p>
<% else %>
    <p><%= link_to 'ログイン', '/tops/main' %></p>
<% end %>

<p><%= link_to 'ユーザー一覧',  '/users' %></p>
